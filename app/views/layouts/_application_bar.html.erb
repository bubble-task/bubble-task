<header>
  <div class="navbar-fixed">
    <nav>
      <div class="container">
        <div class="nav-wrapper">
          <span class="brand-logo"><%= content_for(:navigation_title) || 'Bubble Task' %></span>
          <a href="#" data-activates="slide-out" class="button-collapse top-nav hide-on-large-only">
            <i class="mdi-navigation-menu"></i>
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>
<ul id="slide-out" class="side-nav fixed">
  <li class="brand-logo">
  <a href="/">BubbleTask</a>
  </li>
  <li class="divider"></li>
  <li class="avatar">
    <%= link_to '#!', class: 'dropdown-button', data: { activates: 'side-user-menu', beloworigin: 'true' } do %>
      <img id="current-user-avatar" class="circle" />
      <%= current_user.name %>
      <%= show_avatar_image(current_user) %>
      <i class="material-icons right">keyboard_arrow_down</i>
    <% end -%>
    <ul id="side-user-menu" class="dropdown-content dropdown-side-nav">
      <li>
        <%= link_to session_url, method: :delete do %>
          <%= t('sessions.actions.sign_out') %>
          <i class="material-icons left">exit_to_app</i>
        <% end -%>
      </li>
    </ul>
  </li>
  <li class="divider"></li>
  <li<%= activate_menu([{ 'home' => 'index' }, { 'tasks' => 'new' }, { 'tasks' => 'show' }, { 'tasks' => 'index' }]) %>>
    <%= link_to root_url do %>
      <%= t('home.index.navigation_title') %>
      <i class="material-icons left">view_list</i>
    <% end -%>
  </li>
  <li<%= activate_menu([{ 'achievements' => 'index' }]) %>>
    <%= link_to achievements_url do %>
      <%= t('achievements.index.navigation_title') %>
      <i class="material-icons left">done</i>
    <% end -%>
  </li>
  <li<%= activate_menu([{ 'tags' => 'index' }]) %>>
    <%= link_to tags_url do %>
      <%= t('tags.index.page_title') %>
      <i class="material-icons left">local_offer</i>
    <% end -%>
  </li>
</ul>

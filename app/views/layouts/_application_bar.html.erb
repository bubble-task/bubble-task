<header>
  <div class="navbar-fixed">
    <nav>
      <div class="container">
        <div class="nav-wrapper">
          <a href="#" data-activates="slide-out" class="button-collapse show-on-large">
            <i class="mdi-navigation-menu"></i>
          </a>
          <a href="/" class="brand-logo">Bubble Task</a>
          <ul class="right hide-on-med-and-down">
            <li<%= activate_menu(root_url) %>>
              <%= link_to root_url, class: 'tooltipped', data: { position: 'bottom', tooltip: 'タスク一覧' } do %>
                <i class="material-icons">view_list</i>
              <% end -%>
            </li>
            <li class="avatar">
              <%= link_to '#!', class: 'dropdown-button avatar-toggle', data: { activates: 'top-user-menu', constrainwidth: 'false', beloworigin: 'true' } do %>
                <img src="https://gravatar.com/avatar" />
                <i class="mdi-navigation-arrow-drop-down right"></i>
              <% end -%>
              <ul id="top-user-menu" class="dropdown-content">
                <li class="nolink"><span><%= current_user.name %></span></li>
                <li class="divider"></li>
                <li><%= link_to t('sessions.actions.sign_out'), session_url, method: :delete %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
<ul id="slide-out" class="side-nav">
  <li class="avatar">
    <%= link_to '#!', class: 'dropdown-button avatar-toggle', data: { activates: 'side-user-menu', constrainwidth: 'false', beloworigin: 'true' } do %>
      <img src="https://gravatar.com/avatar" />
      <span><%= current_user.name %></span>
      <i class="mdi-navigation-arrow-drop-down right"></i>
    <% end -%>
  </li>
  <li class="divider"></li>
</ul>
<ul id="side-user-menu" class="dropdown-content">
  <li><%= link_to t('sessions.actions.sign_out'), session_url, method: :delete %></li>
</ul>

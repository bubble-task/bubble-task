<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div id="flash" class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %> alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <span style="color: green; z-index: 10;"><%= msg %></span>
    </div>
  <% end %>
<% end %>

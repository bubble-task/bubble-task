<%= content_for(:page_title, t('.page_title')) %>
<div class="col s10">
  <div class="container-float container-primary">
    <div class="row row-no-margin">
      <div class="col s1" id="<%= task_completion_css_id(@task.id) %>">
        <%= render partial: 'tasks/task_completion', locals: { task: @task } %>
      </div>
      <div class="col s11 task-detail">
        <div class="row row-no-margin">
          <div class="col s11 tags">
            <% @task.tags.each do |tag| %>
              <%= tag.present(self) %>
            <% end -%>
          </div>
          <div class="col s1 task-actions">
            <%= render partial: 'tasks/task_actions', locals: { task: @task, remote: false } %>
          </div>
        </div>
        <h1 class="task-title"><%= @task.title %></h1>
        <% if @task.description -%>
          <div class="divider"></div>
          <%= simple_format(h(@task.description), class: 'task-description') %>
        <% end -%>
      </div>
    </div>
  </div>
</div>
<div class="fixed-action-btn">
  <%= link_to previous_url_for_task, class: 'btn-floating btn-large waves-effect waves-light' do %>
    <i class="large material-icons">keyboard_arrow_left</i>
  <% end -%>
</div>

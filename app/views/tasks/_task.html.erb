<div id="task_<%= task.id %>" class="task-summary task-summary-primary">
  <div class="row row-no-margin">
    <div class="col s1">
      <%= form_for(task.completion_command, url: complete_task_url(task), method: :put) do |f| %>
        <input type="hidden" name="tag" value="<%= @tag %>">
        <input type="checkbox" id="task_<%= task.id %>_completion_check" class="task_completion" <%= task.completion_checkbox_state %> />
        <label id="task_<%= task.id %>_completion" for="task_<%= task.id %>_completion_check"></label>
      <% end %>
    </div>
    <div class="col s10">
      <div class="tags">
        <% task.tags.each do |tag| %>
          <%= tag.present(self) %>
        <% end -%>
      </div>
      <%= link_to task.title, task_url(task), class: 'task-title' %>
    </div>
    <div class="col s1 task-actions">
      <%= render partial: 'tasks/task_actions', locals: { task: task } %>
    </div>
  </div>
</div>

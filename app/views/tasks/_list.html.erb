<div class="task-summary-list">
  <% tasks.each do |task| %>
    <div id="task_<%= task.id %>" class="task-summary">
      <div class="tags">
        <% if task.tags.any? %>
          <% task.tags.each do |tag| %>
            <div class="tag"><%= link_to tag, tasks_url(tag: tag) %></div>
          <% end -%>
        <% else -%>
          <div class="tag-personal"><%= t('tasks.show.tag_personal') %></div>
        <% end -%>
      </div>
      <%= link_to task.title, task_url(task), class: 'task-title' %>
    </div>
  <% end -%>
</div>

<%= content_for(:page_title, t('.page_title')) %>
<div class="col s12">
  <div class="container-float container-slim">
    <% @tags.each do |tag| %>
      <div class="row">
        <div class="col s11">
          <div class="tag tag-individual">
            <%= link_to tag, tasks_url(tag: tag) %>
          </div>
        </div>
        <div class="col s1">
          <%= link_to new_task_url(tag: tag), data: { no_turbolink: true }, class: 'task_creation_on_tags btn-floating btn-large waves-effect waves-light tooltipped', data: { position: 'left', tooltip: tag } do %>
            <i class="material-icons">create</i>
          <% end -%>
        </div>
      </div>
    <% end %>
  </div>
</div>

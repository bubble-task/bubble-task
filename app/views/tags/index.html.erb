<%= content_for(:navigation_title, t('.navigation_title')) %>
<%= content_for(:page_title, t('.page_title')) %>
<div class="col s12">
  <div class="container-float container-primary">
    <% @tags.each do |tag| %>
      <div class="row">
        <div class="col s1">
          <%= link_to new_task_url(tag: tag), data: { no_turbolink: true }, class: 'task_creation_on_tags waves-effect waves-light' do %>
            <i class="material-icons">add_circle</i>
          <% end -%>
        </div>
        <div class="col s11">
          <div class="tag tag-individual">
            <%= link_to tag, tasks_url(tag: tag) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

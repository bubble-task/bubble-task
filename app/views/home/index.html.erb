<% content_for(:page_title, t('.page_title')) %>
<div class="col s12">
  <div class="container-embedded">
    <% if @tasks.any? -%>
      <%= render partial: 'tasks/list', locals: { tasks: @tasks } %>
    <% else -%>
      <p class="message-embedded message-default">
        <%= t('tasks.list.empty') %><i class="material-icons left">done_all</i>
      </p>
    <% end -%>
  </div>
</div>
<div class="fixed-action-btn">
  <%= link_to new_task_url, data: { no_turbolink: true }, class: 'btn-floating btn-large waves-effect waves-light' do %>
    <i class="large material-icons">create</i>
  <% end -%>
</div>

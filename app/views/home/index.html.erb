<% content_for(:navigation_title, t('.navigation_title')) %>
<% content_for(:page_title, t('.section_titles.todays_tasks')) %>
<div class="col s12">
  <div class="container-embedded">
    <div class="todays-tasks">
      <%= render partial: 'tasks/list', locals: { tasks: @todays_tasks, show_schedule_actions: true, todays_tasks: true } %>
    </div>
    <div class="section-header section-header-default">
      <span class="title"><%= t('.section_titles.somedays_tasks') %></span>
    </div>
    <div class="somedays-tasks">
      <%= render partial: 'tasks/list', locals: { tasks: @somedays_tasks, show_schedule_actions: true, todays_tasks: false } %>
    </div>
  </div>
</div>
<div class="fixed-action-btn">
  <%= link_to new_task_url, data: { no_turbolink: true }, class: 'btn-floating btn-large waves-effect waves-light task-creation-link' do %>
    <i class="large material-icons">add</i>
  <% end -%>
</div>
